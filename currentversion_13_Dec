    <p id="demo"></p>

    <button onclick="myFunction3()">Activate STOP</button>
    <p id="activate_stop"></p>

    <button onclick="clearInterval(myFunction2)">STOP</button>

    <body>

        <script>

        var c = 0;

            function myFunction1() {
                alert("It's going to start!")
            }
            
            function myFunction2() {

               
                document.getElementById("demo").innerHTML = c--;
                }

            function myFunction3() {
                alert("It's going to stop!")
            }
        function myFunction4() {
                // set to stop y clearing interval-->

            }
            
            function myCounter() {
                document.getElementById("demo").innerHTML = ++c;
            }

